{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "HRPHP Widgets",
    "contact": {
      "name": "hrphp",
      "url": "http://hrphp.org"
    },
    "license": {
      "name": "Creative Commons 4.0 International",
      "url": "http://creativecommons.org/licenses/by/4.0/"
    }
  },
  "host": "hrphp-widgets-api.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/widgets": {
      "get": {
        "description": "Finds widgets in the system.",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "description": "query offset",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of results to return",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "Widget collection response",
            "schema": {
              "$ref": "#/definitions/WidgetCollection"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/widgets/{id}": {
      "get": {
        "description": "Returns a widget by the provided ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Widget response",
            "schema": {
              "$ref": "#/definitions/Widget"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "WidgetCollection": {
      "required": [
        "widgets"
      ],
      "properties": {
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Widget"
          }
        }
      }
    },
    "Widget": {
      "required": [
        "id",
        "name",
        "color",
        "createdAt",
        "modifiedAt"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "createdAt": {
          "type": "string"
        },
        "modifiedAt": {
          "type": "string"
        }
      }
    },
    "Error": {
      "required": [
        "error"
      ],
      "properties": {
        "error": {
          "type": "string"
        }
      }
    }
  }
}